<% provide(:title, 'Edit') %>

  <section class="module bg-dark-30" data-background="./section-4.jpg">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <h1 class="module-title font-alt mb-0">Edit</h1>
        </div>
      </div>
    </div>
  </section>
<!-- form部分 -->
<section class="module">
  <div class="container">
    <div class="row">
      <div class="col-sm-5">
        <h4 class="font-alt">Edit</h4>
        <hr class="divider-w mb-10">
          <form class="form">
            <%= form_for @video do |f| %>
              <div class="form-group">
                <%= f.label :name %><br />
                <%= f.text_field :name, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :url %><br />
                <%= f.text_field :video_id, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :comment %><br />
                <%= f.text_field :comment, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.submit "Update", class: "btn btn-round btn-b" %>
              </div>
            <% end %>
          </form>
        </div>
      </div>
    </div>
  </section>
  
