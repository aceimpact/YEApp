- provide(:title, 'HOME')
%section#home.home-section.bg-dark-60.portfolio-page-header.parallax-bg
  .titan-caption
    .caption-content
      .font-alt.mb-30.titan-title-size-1 Hello &amp; welcome
      .font-alt.mb-40.titan-title-size-4 YEApp
.index-content
  .container
    - @videos.each do |video|
      .col-lg-4
        .card
          %h4= video.name
          %iframe#player{:frameborder => "0", :height => "200", :src => "https://www.youtube.com/embed/#{video.uuid}", :type => "text/html", :width => "320"}
          %p= video.comment
          = link_to "#{video.user.name}"
          %br/
          .like
          - if user_signed_in? && video.like_user(current_user.id)
            = link_to video_like_path(video, video.likes.ids), method: :delete, id: "like-button", remote: true do
              = image_tag("icon_red_heart.png")
          - else
            = link_to video_likes_path(video), method: :post, id: "like-button", remote: true do
              = image_tag("icon_heart.png")
