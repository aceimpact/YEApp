<% provide(:title, "MYPAGE") %>

  <section class="module bg-dark-60 service-page-header">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <h2 class="module-title font-alt">MYPAGE</h2>
        </div>
      </div>
    </div>
  </section>

  <%= @video.each do |video| %>
    <section class = "card">
      <div class = "col-lg-4">
        <h4><%= video.name %></h4>
          <div class = "youtube-container">
            <iframe id="player" frameborder="0" height="200" src="https://www.youtube.com/embed/#{video.video_id}" type="text/html" width="320"></iframe>
          </div>
          <p><%= video.comment %></p>
          <%= link_to "Edit", edit_video_path(video), class: "btn btn-round btn-primary" %>
          <%= link_to "Delete", video_path(video), :method => :delete, :confirm => '本当に削除しますか？', class: "btn btn-round btn-danger" %>
      </div>
    </section>
  <% end %>
